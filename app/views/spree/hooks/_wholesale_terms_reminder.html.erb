<% order ||= @order %>
<% if order && order.is_wholesale? %>
  <h4 class="wholesale-customer-id"><%= t('wholesale_customer', { :id => order.user_id }) %></h4>
  <% unless order.payment %>
    <h3>We are shipping this order to you on <%= order.wholesaler.terms %> terms. Please send payment to: <%= Spree::Config[:site_name] %>.</h3>
  <% end %>
<% end %>
